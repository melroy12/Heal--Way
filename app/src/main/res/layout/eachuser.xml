<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:backgroundTint="#01433D"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_margin="16dp"
        android:background="#005C5C"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingEnd="5dp"
                android:text="Username :"
                android:textColor="#FDFBFB"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVcardUName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text=""
                android:textColor="#F39494"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingEnd="5dp"
                android:text="Email :"
                android:textColor="#FBFBFB"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVcardEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text=""
                android:textColor="#F39494"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingEnd="5dp"
                android:text="Phone :"
                android:textColor="#FAF9F9"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVcardPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text=""
                android:textColor="#F39494"
                android:textSize="22dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingEnd="5dp"
                android:text="Address :"
                android:textColor="#FAF9F9"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVcardAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text=""
                android:textColor="#F39494"
                android:textSize="22dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingEnd="5dp"
                android:text="Password :"
                android:textColor="#FAF9F9"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVcardPasswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text=""
                android:textColor="#F39494"
                android:textSize="22dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>